    "extract-text-webpack-plugin": "^3.0.2",
    "helmet": "^3.9.0",
    "method-override": "^2.3.10",
    "mongoose": "^4.13.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "postcss-cssnext": "^2.10.0",
