{
  "name": "ssr_demo_app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "mongo": "mongod --port 27017 --dbpath=./data",
    "dev:old": "NODE_ENV=development nodemon server/babel-server.js",
    "build:old": "yarn run babel:server && yarn run babel:components",
    "babel:server": "babel server -d dist/server",
    "babel:components": "babel app/components -d dist/client/components",
    "serve": "NODE_ENV=production node dist/server/server.js",
    "clean": "rimraf public && rimraf compiled",
    "start": "npm run build && cross-env NODE_ENV=production node compiled/server.js",
    "dev": "cross-env NODE_ENV=development nodemon server/babel-server.js",
    "build:dev": "cross-env NODE_ENV=development npm run webpack -- --env.server",
    "build": "npm run clean && cross-env NODE_ENV=production npm run webpack -- --env.browser && cross-env NODE_ENV=production npm run webpack -- --env.server",
    "webpack": "webpack --colors --display-error-details --config ./webpack/webpack.config.js",
    "watch:client": "webpack -p --progress --colors --config ./webpack/webpack.config.client.js --watch"
  },
  "dependencies": {
